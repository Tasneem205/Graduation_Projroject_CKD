model medications{
  medicationID Int @id@default(autoincrement())
  medication_name String
  dosage_form String
  manufacturer String
  generic_name String
  therapeutic_class String

}

model patients {
  PatientID Int @id@default(autoincrement())
  FirstName String
  LastName String
  DateOfBirth DateTime
  Gender String
  Email String
  Password String
  DoctorID Int
  Job String

}

model prescriptions{
  prescriptionID Int @id@default(autoincrement())
  patientID Int
  DoctorID Int
  prescription_date DateTime
  ExpiryDate DateTime
}
model prescriptions_medication{
  prescriptionID Int @id@default(autoincrement())
  medicationID Int
  dosage String
  frequency String
  instructions String
}
