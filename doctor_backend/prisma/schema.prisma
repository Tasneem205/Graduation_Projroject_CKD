model Assistant{
  AssistantID Int @id@default(autoincrement())
  FirstName String
  LastName String
  Email String @unique
  Password String
}

model DailyProgress{
  ProregressID Int @id@default(autoincrement())
  ProgressData DateTime
  PatientID Int
  WaterML Int
  WalkingTime DateTime @db.Time
  WalkingSteps Int
  Excercise DateTime @db.Time
  DiabetesStatus Int
  // PressureHigh Int
  // pressureLow Int
}

model Doctors{
  DoctorID Int @id@default(autoincrement())
  FirstName String
  LastName String
  Phone_num String
  Email String @unique
  Password String
}

model followup{
  followupID  Int @id@default(autoincrement())
  prescriptionID Int
  followup_date DateTime
  followup_notes String
}

model kidney_scan{
  Scan_ID Int @id@default(autoincrement())
  PatientID Int
  ScanDate DateTime
  img String
  class String
}

